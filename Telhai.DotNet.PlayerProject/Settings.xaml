<Window x:Class="Telhai.DotNet.PlayerProject.Settings"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        Background="#333" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Music Folders to Scan" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox x:Name="lstFolders" Grid.Row="1" Background="#222" Foreground="#DDD" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Add Folder" Click="BtnAddFolder_Click" Width="80" Margin="5"/>
                <Button Content="Remove" Click="BtnRemoveFolder_Click" Width="80" Margin="5"/>
            </StackPanel>

            <Button Content="SCAN NOW AND CLOSE" Click="BtnScan_Click" Height="30" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>