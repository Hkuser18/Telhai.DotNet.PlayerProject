<Window x:Class="Telhai.DotNet.HadarKeller.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Song" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <Image Width="160" Height="160" Margin="0,0,12,0" Stretch="Uniform" Source="{Binding DisplayImage}"/>
            <StackPanel>
                <TextBlock Text="Title" FontWeight="Bold"/>
                <TextBox Width="320" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Artist" FontWeight="Bold" Margin="0,12,0,0"/>
                <TextBlock Text="{Binding ArtistName}"/>

                <TextBlock Text="Album" FontWeight="Bold" Margin="0,12,0,0"/>
                <TextBlock Text="{Binding AlbumName}"/>

                <TextBlock Text="File Path" FontWeight="Bold" Margin="0,12,0,0"/>
                <TextBlock Text="{Binding FilePath}" TextWrapping="Wrap" Width="320"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Images" FontWeight="Bold" Grid.Row="1" Margin="0,0,0,6"/>

        <ListBox Grid.Row="2" ItemsSource="{Binding ImagePaths}" SelectedItem="{Binding SelectedImagePath}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Add" Width="80" Margin="0,0,8,0" Command="{Binding AddImageCommand}"/>
            <Button Content="Remove" Width="80" Margin="0,0,8,0" Command="{Binding RemoveImageCommand}"/>
            <Button Content="Save" Width="80" Margin="0,0,8,0" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
